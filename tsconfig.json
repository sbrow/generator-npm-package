{
    "compilerOptions": {
        "allowJs": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "generators",
        "rootDir": "src",
        "baseUrl": "src",
        "paths": {
            "package.json": [
                "../package.json"
            ],
        }
    },
    "exclude": [
        "coverage",
        "__setup__",
        "__tests__",
        "generators"
    ]
}