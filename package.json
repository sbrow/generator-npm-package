{
  "name": "generator-npm-package",
  "version": "0.5.0",
  "description": "Generates boilerplate for npm packages",
  "author": {
    "name": "Spencer Brower",
    "email": "brower.spencer@gmail.com"
  },
  "license": "GPL-3.0",
  "todos": {
    "features": [
      "option to install additional packages",
      {
        "description": "read from package.json as well as config",
        "reason": "Allows install into pre-assembled projects."
      },
      "object-literal-sort-keys for tslint",
      {
        "description": "add 'moduleDirectories: [\"node_modules\", \"source\"]' to config",
        "reason": "allows interop with typescript's 'baseurl' option.",
        "for": "jest"
      }
    ]
  },
  "keywords": [
    "yeoman-generator"
  ],
  "files": [
    "generators"
  ],
  "main": "generators/app/index.js",
  "engines": {
    "npm": ">= 4.0.0"
  },
  "scripts": {
    "test": "jest",
    "cover": "jest --coverage",
    "lint": "tslint --project .",
    "build": "tsc",
    "build:watch": "yarn run build -w",
    "watch": "yarn run build:watch",
    "clean": "shx rm -rf generators/*",
    "clean-build": "yarn run clean && npm run build",
    "make": "yarn run make:templates",
    "env": "env",
    "make:templates": "shx cp -r src/**/templates generators/**/templates",
    "webpack": "webpack",
    "start": "node $npm_package_main"
  },
  "devDependencies": {
    "@types/inquirer": "^6.0.1",
    "@types/jest": "^24.0.12",
    "@types/node": "^11.13.8",
    "@types/shelljs": "^0.8.5",
    "@types/yeoman-assert": "^3.1.1",
    "@types/yeoman-generator": "^3.1.1",
    "@types/yeoman-test": "^2.0.2",
    "coveralls": "^3.0.2",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-xo": "^0.25.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.2.0",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.2",
    "shx": "^0.3.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-microsoft-contrib": "^6.1.1",
    "typescript": "^3.4.5",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^1.7.0"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "generator-npm-init": "^1.5.0",
    "shelljs": "^0.8.3",
    "yeoman-generator": "^2.0.1",
    "yosay": "^2.0.1"
  }
}