{
  "name": "generator-npm-package",
  "version": "0.10.0",
  "description": "Generates boilerplate for npm packages",
  "author": {
    "name": "Spencer Brower",
    "email": "brower.spencer@gmail.com"
  },
  "directories": {
    "lib": "generators",
    "test": "__tests__"
  },
  "license": "GPL-3.0",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "todos": {
    "features": [
      "option to install additional packages",
      "object-literal-sort-keys for tslint",
      {
        "description": "add 'moduleDirectories: [\"node_modules\", \"source\"]' to config",
        "reason": "allows interop with typescript's 'baseurl' option.",
        "for": "jest"
      },
      {
        "for": "React",
        "description": "ask if user also wants to install React-Bootstrap"
      },
      {
        "for": "Webpack",
        "description": "Ask if user wants to move dependencies to devDependencies"
      },
      {
        "for": "Webpack",
        "description": "Option to add css/style loaders"
      },
      {
        "for": "Typescript",
        "description": "enable 'Type Acquisition'. If enabled, don't ask to install @types."
      },
      {
        "for": "React",
        "description": "generate boilerplate (index.jsx, App.jsx, AppStore, AppStoreContext, etc.)"
      }
    ]
  },
  "keywords": [
    "yeoman-generator"
  ],
  "files": [
    "generators"
  ],
  "main": "generators/app/index.js",
  "engines": {
    "npm": ">= 8.11.0"
  },
  "scripts": {
    "test": "jest",
    "test:w": "jest --watch",
    "coveralls": "yarn test --coverageReporters=text-lcov | coveralls",
    "prepare": "yarn build && yarn make",
    "lint": "tslint --project .",
    "build": "tsc",
    "build:watch": "yarn run build -w",
    "watch": "yarn run build:watch",
    "clean": "shx rm -rf generators/*",
    "clean-build": "yarn run clean && npm run build",
    "make": "node bin/make.js",
    "webpack": "webpack",
    "start": "node $npm_package_main",
    "preversion": "git checkout master && git merge develop --no-ff",
    "version": "standard-version"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/shelljs": "^0.8.5",
    "@types/yeoman-assert": "^3.1.1",
    "@types/yeoman-generator": "^3.1.2",
    "@types/yeoman-test": "^2.0.2",
    "coveralls": "^3.0.3",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-xo": "^0.25.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.2.0",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.2",
    "shx": "^0.3.2",
    "standard-version": "^6.0.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-microsoft-contrib": "^6.1.1",
    "typescript": "^3.4.5",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^1.7.0"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "generator-npm-init": "^1.5.0",
    "shelljs": "^0.8.3",
    "yeoman-generator": "^2.0.1",
    "yosay": "^2.0.1"
  }
}