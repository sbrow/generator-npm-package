{
    "entry": "./src/index.tsx",
    "output": {
        "filename": "bundle.js"
    },
    "resolve": {
        "extensions": [
            ".[jt]sx?",
            ".json"
        ]
    },
    "module": {
        "rules": [
            {
                "test": /\.tsx?$/,
                "loader": "awesome-typescript-loader"
            },
            {
                "enforce": "pre",
                "test": /\.js$/,
                "loader": "source-map-loader"
            }
        ]
    },
    "externals": {
        "react": "React",
        "react-dom": "ReactDOM"
    }
}